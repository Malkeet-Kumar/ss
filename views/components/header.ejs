<style>
    *{
        margin: 0;
        padding: 0;
    }
    .header{
        width: 100%;
        height: 10vh;
        background-color: black;
        display: flex;
        justify-content: space-between;
        align-items: center;

    }
    .navbuttons{
        margin-left: 30px;
        display: flex;
        align-items: center;
        height: 100%;
    }
    .navbuttons a{
        color: white;
        text-decoration: none;
        font-size: 18px;
        margin: 5px;
        padding: 10px;
    }
    .navbuttons a:hover{
        background-color: rgb(48, 44, 44);
    }
    .usercontrol{
        width: 10%;
        margin-right: 30px;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
    }
    #logout{
        border: none;
        color: white;
        background-color: darkolivegreen;
        padding: 10px;
        border-radius: 5px;
    }
</style>
<div class="header">
    <% if (role=="ordinary") { %>
        <div class="navbuttons">
            <a href="#">Home</a>
            <a href="#">Account</a>
            <a href="#">Contact Us</a>
            <a href="complaint">Complaint</a>
        </div>
      <% } else if(role=="resolver") { %>
        <div class="navbuttons">
            <a href="#">Home</a>
            <a href="#">Account</a>
            <a href="complaint">Complaint</a>
            <a href="#">Opened Tickets</a>
            <a href="">Closed Tickets</a>
        </div>
         <% } else { %>
            <div class="navbuttons">
                <a href="#">Home</a>
                <a href="#">Account</a>
                <a href="">Open Tickets</a>
            </div>
    <% } %>
   
    <div class="usercontrol">
        <% if (username){ %>
                <h3 style="color: white;"><%= username %></h3>
        <% } %>
        <button id="logout"><a href="/logout" style="color: white; text-decoration: none;">Logout</a></button>
    </div>
</div>